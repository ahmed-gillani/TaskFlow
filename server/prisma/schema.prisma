// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  tasks     Task[]
  habits    Habit[]
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  priority    String   @default("Medium")
  dueDate     String?
  completed   Boolean  @default(false)
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

model Habit {
  id              Int      @id @default(autoincrement())
  name            String
  color           String
  completedDates  Json     @default("[]")  // Array as JSON string
  userId          Int
  user            User     @relation(fields: [userId], references: [id])
  createdAt       DateTime @default(now())
}